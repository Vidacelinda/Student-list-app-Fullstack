<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    
    <title>NavBar</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
</head>
<body>
    <!-- bootstrap Nav bar -->
    <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">Student APP</a>
          </div>
          <ul class="nav navbar-nav">
            <li class="nav-item" data-file="/">
                <a href="/">HOME</a></li>
            <li class="nav-item" data-file="/add">
                <a href="add">ADD</a></li>
            <li class="nav-item" data-file="/update">
                <a href="update">Update</a></li>
            <li class="nav-item" data-file="/find">
                <a href="find">View</a></li>
            <li class="nav-item" data-file="/delete">
                <a href="delete">Delete</a></li>
            <li class="nav-item" data-file="/list">
                <a href="list">List</a></li>
          </ul>
        </div>
    </nav>
    <script>
        // url path name
        const currentFile = window.location.pathname;
        console.log("running active file !!")
        //
        const navbarItems=document.querySelectorAll('.nav-item');
        navbarItems.forEach(item=>{
            if(item.dataset.file===currentFile){
                item.classList.add('active');
            }
        });
    </script>
</body>
</html>

